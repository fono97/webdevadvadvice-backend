{
  "kind": "collectionType",
  "collectionName": "tutorials",
  "info": {
    "name": "tutorials",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "alt": {
      "type": "string",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "desc": {
      "type": "text",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "html",
        "css",
        "JavaScript",
        "react",
        "gatsby",
        "php",
        "mysql"
      ],
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "min": {
      "type": "string",
      "required": true
    },
    "src": {
      "type": "string",
      "required": false
    },
    "body": {
      "type": "component",
      "repeatable": true,
      "component": "descriptionbody.tutorialbody"
    },
    "introduction": {
      "type": "component",
      "repeatable": true,
      "component": "text-links.tutorial-intro"
    },
    "sommaire": {
      "type": "component",
      "repeatable": true,
      "component": "link-section.sommaire"
    },
    "recap": {
      "type": "string",
      "required": true
    },
    "conclusion": {
      "type": "component",
      "repeatable": true,
      "component": "text-links.tutorial-intro"
    },
    "category1": {
      "type": "string",
      "required": false
    },
    "category2": {
      "type": "string"
    },
    "category3": {
      "type": "string"
    }
  }
}
